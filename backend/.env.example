# Application settings
DEBUG=true
SECRET_KEY=change-me-in-production

# Token encryption key for OAuth tokens (Fernet key, 32 url-safe base64 bytes)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# If not set, derives from SECRET_KEY (less secure, not recommended for production)
# TOKEN_ENCRYPTION_KEY=your-fernet-key-here

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/zergrush

# Cloud provider: gcp, aws, azure
CLOUD_PROVIDER=gcp

# ============================================================================
# GCP settings (required when CLOUD_PROVIDER=gcp)
# ============================================================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# GCP compute type: cloudrun (containers) or gce (VMs)
# Cloud Run is more cost-effective and easier to manage
GCP_COMPUTE_TYPE=cloudrun

# GCE settings (only needed when GCP_COMPUTE_TYPE=gce)
GCP_AGENT_NETWORK=agent-network
GCP_AGENT_SUBNET=agent-subnet

# Cloud Run settings (only needed when GCP_COMPUTE_TYPE=cloudrun)
# VPC connector for private networking (optional but recommended)
# GCP_VPC_CONNECTOR=projects/PROJECT/locations/REGION/connectors/CONNECTOR
# Custom agent container image (optional, uses default if not set)
# AGENT_CONTAINER_IMAGE=gcr.io/your-project/zerg-rush-agent:latest

# ============================================================================
# Azure settings (required when CLOUD_PROVIDER=azure)
# ============================================================================
# AZURE_SUBSCRIPTION_ID=your-subscription-id
# AZURE_RESOURCE_GROUP=zerg-rush-rg
# AZURE_LOCATION=eastus

# Azure compute type: aci (containers) or vm (VMs)
# ACI is more cost-effective and easier to manage
# AZURE_COMPUTE_TYPE=aci

# Azure Storage (for agent data exchange)
# AZURE_STORAGE_ACCOUNT=zergrushstorage

# Azure Key Vault (for credential storage)
# AZURE_KEYVAULT_NAME=zerg-rush-vault

# Azure Container Registry (for agent container images)
# AZURE_CONTAINER_REGISTRY=zergrush

# Azure VNet settings for ACI (optional but recommended for security)
# AZURE_VNET_NAME=zerg-rush-vnet
# AZURE_SUBNET_NAME=aci-subnet

# OAuth (Azure AD/Entra ID) - for Azure cloud provider
# AZURE_CLIENT_ID=your-azure-app-client-id
# AZURE_CLIENT_SECRET=your-azure-app-client-secret
# AZURE_TENANT_ID=common  # Use "common" for multi-tenant or specific tenant ID

# ============================================================================
# OAuth (Google)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_REDIRECT_URI=http://localhost:8000/auth/callback

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# Agent defaults
DEFAULT_VM_SIZE=e2-small
DEFAULT_AGENT_PLATFORM=openclaw
